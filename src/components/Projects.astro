    margin-bottom: var(--spacing-sm);
  }

  .section-icon {
    color: var(--ps2-blue-glow);
    font-size: 2rem;
    animation: glow 2s ease-in-out infinite;
  }

  .section-subtitle {
    color: var(--ps2-blue-light);
    font-size: 1.1rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--spacing-lg);
  }

  .project-card {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    min-height: 320px;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding-bottom: var(--spacing-sm);
    border-bottom: 1px solid var(--ps2-card-border);
  }

  .card-icon {
    font-size: 2rem;
    filter: drop-shadow(0 0 8px var(--ps2-blue-light));
  }

  .card-info {
    flex: 1;
  }

  .project-title {
    font-size: 1.3rem;
    margin-bottom: 0.25rem;
    color: var(--ps2-white);
  }

  .project-size {
    font-size: 0.85rem;
    color: var(--ps2-blue-light);
    font-family: monospace;
  }

  .project-description {
    flex: 1;
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.6;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }

  .tech-tag {
    background: rgba(77, 148, 255, 0.2);
    color: var(--ps2-blue-light);
    padding: 0.35rem 0.75rem;
    border-radius: 4px;
    font-size: 0.85rem;
    border: 1px solid var(--ps2-blue-light);
    font-weight: 500;
  }

  .project-actions {
    display: flex;
    gap: var(--spacing-sm);
    margin-top: auto;
  }

  .project-actions .ps2-button {
    flex: 1;
    text-align: center;
    font-size: 0.85rem;
    padding: var(--spacing-xs) var(--spacing-sm);
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 2rem;
      flex-direction: column;
    }
  }
</style>
