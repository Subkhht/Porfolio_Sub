<section id="hero" class="hero">
  <div class="container">
    <div class="hero-profile">
      <div class="profile-card ps2-card">
        <div class="profile-image-wrapper">
          <img src="/profile.png" alt="Alejandro Hernández Sánchez" class="profile-image" />
        </div>
        <div class="profile-status">
          <div class="status-bar"></div>
          <span class="status-text">PLAYER 1</span>
        </div>
      </div>
    </div>
    <div class="hero-content fade-in">
      <div class="hero-icon">▶ Alejandro Hernández Sánchez</div>
      <h1 class="hero-title">
        <span class="glitch" data-text="Bienvenido">Bienvenido</span>
      </h1>
      <h2 class="hero-subtitle">Desarrollador Full Stack Junior</h2>
      <p class="hero-description">
        Creando experiencias digitales únicas con tecnología de vanguardia
      </p>
      <div class="hero-buttons">
        <a href="#projects" class="ps2-button">Ver Proyectos</a>
        <a href="#contact" class="ps2-button">Contactar</a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: calc(70px + var(--spacing-xl)) 0 var(--spacing-xl);
    position: relative;
  }

  .hero .container {
    display: grid;
    grid-template-columns: 0.9fr 1.5fr;
    gap: var(--spacing-xl);
    align-items: center;
  }

  /* Profile Card Styles */
  .hero-profile {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .profile-card {
    padding: var(--spacing-md);
    background: linear-gradient(135deg, #1a1a2e 0%, #0f0f1e 100%);
    border: 3px solid var(--ps2-blue-light);
    transform: perspective(1000px) rotateY(10deg);
    transition: all 0.5s ease;
    max-width: 280px;
  }

  .profile-card:hover {
    transform: perspective(1000px) rotateY(0deg) scale(1.1);
    border-color: var(--ps2-blue-glow);
    box-shadow: 
      0 12px 40px rgba(77, 148, 255, 0.6),
      inset 0 2px 0 rgba(255, 255, 255, 0.2);
  }

  .profile-image-wrapper {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    border: 2px solid var(--ps2-blue-light);
    box-shadow: 
      0 8px 32px rgba(0, 71, 171, 0.4),
      inset 0 2px 0 rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }

  .profile-card:hover .profile-image-wrapper {
    border-color: var(--ps2-blue-glow);
    box-shadow: 
      0 12px 40px rgba(107, 182, 255, 0.7),
      inset 0 2px 0 rgba(255, 255, 255, 0.2);
  }

  .profile-image {
    width: 100%;
    height: auto;
    display: block;
    filter: brightness(1.05) contrast(1.1);
    transition: all 0.5s ease;
  }

  .profile-card:hover .profile-image {
    transform: scale(1.35);
    filter: brightness(1.15) contrast(1.2);
  }

  .profile-status {
    margin-top: var(--spacing-sm);
    text-align: center;
  }

  .status-bar {
    height: 4px;
    background: linear-gradient(90deg, 
      var(--ps2-blue-dark) 0%, 
      var(--ps2-blue-primary) 50%, 
      var(--ps2-blue-glow) 100%
    );
    border-radius: 2px;
    margin-bottom: var(--spacing-xs);
    box-shadow: 0 0 10px var(--ps2-blue-light);
  }

  .status-text {
    color: var(--ps2-blue-glow);
    font-weight: 700;
    font-size: 0.9rem;
    letter-spacing: 2px;
    text-shadow: 0 0 10px var(--ps2-blue-glow);
  }

  .hero-content {
    z-index: 1;
  }

  .hero-icon {
    font-size: 2.2rem;
    color: var(--ps2-blue-glow);
    margin-bottom: var(--spacing-md);
    text-shadow: 0 0 30px var(--ps2-blue-glow);
    animation: glow 2s ease-in-out infinite;
    white-space: nowrap;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .hero-title {
    font-size: 3.5rem;
    margin-bottom: var(--spacing-sm);
    font-weight: 700;
  }

  .glitch {
    position: relative;
    display: inline-block;
  }

  .hero-subtitle {
    font-size: 2rem;
    color: var(--ps2-blue-light);
    margin-bottom: var(--spacing-md);
    font-weight: 500;
  }

  .hero-description {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--spacing-lg);
    max-width: 600px;
  }

  .hero-buttons {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  @media (max-width: 968px) {
    .hero .container {
      grid-template-columns: 1fr;
    }

    .hero-profile {
      order: -1;
      margin-bottom: var(--spacing-lg);
    }

    .profile-card {
      transform: perspective(1000px) rotateY(0deg);
      max-width: 250px;
    }

    .hero-icon {
      font-size: 1.6rem;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .profile-card {
      max-width: 200px;
    }

    .hero-icon {
      font-size: 1.2rem;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-buttons {
      flex-direction: column;
    }

    .hero-buttons .ps2-button {
      width: 100%;
      text-align: center;
    }
  }
</style>
