<style>
  .contact {
    padding: var(--spacing-xl) 0;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .section-title {
    font-size: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
  }

  .section-icon {
    color: var(--ps2-blue-glow);
    font-size: 2rem;
    animation: glow 2s ease-in-out infinite;
  }

  .section-subtitle {
    text-align: center;
    color: var(--ps2-blue-light);
    font-size: 1.1rem;
    margin-bottom: var(--spacing-xl);
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: var(--spacing-xl);
  }

  .contact-form {
    animation: fadeIn 0.6s ease-out;
  }

  .form-group {
    margin-bottom: var(--spacing-md);
  }

  .form-group label {
    display: block;
    margin-bottom: var(--spacing-xs);
    color: var(--ps2-blue-light);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 0.9rem;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: var(--spacing-sm);
    background: rgba(0, 0, 0, 0.3);
    border: 2px solid var(--ps2-card-border);
    border-radius: 4px;
    color: var(--ps2-white);
    font-family: var(--font-primary);
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--ps2-blue-glow);
    box-shadow: 0 0 15px rgba(107, 182, 255, 0.3);
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }

  .submit-btn {
    width: 100%;
    margin-top: var(--spacing-sm);
    cursor: pointer;
    border: 2px solid var(--ps2-blue-light);
  }

  .form-status {
    text-align: center;
    margin-top: var(--spacing-sm);
    font-weight: 600;
    min-height: 1.5rem;
  }

  .form-status.success {
    color: #4ade80;
  }

  .form-status.error {
    color: #f87171;
  }

  .contact-info {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-md);
  }

  .info-card {
    text-align: center;
    padding: var(--spacing-md);
    animation: fadeIn 0.6s ease-out;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
    min-height: 140px;
    justify-content: center;
  }

  .info-card:nth-child(2) {
    animation-delay: 0.1s;
  }

  .info-card:nth-child(3) {
    animation-delay: 0.2s;
  }

  .info-card:nth-child(4) {
    animation-delay: 0.3s;
  }

  .info-icon {
    font-size: 2rem;
    filter: drop-shadow(0 0 8px var(--ps2-blue-light));
    margin-bottom: var(--spacing-xs);
  }

  .info-card h3 {
    color: var(--ps2-blue-light);
    font-size: 1rem;
    margin: 0;
  }

  .info-card a {
    color: rgba(255, 255, 255, 0.9);
    word-break: break-all;
  }

  .info-card a:hover {
    color: var(--ps2-blue-glow);
  }

  @media (max-width: 968px) {
    .contact-content {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 2rem;
    }
  }

  @media (max-width: 480px) {
    .contact-info {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  const form = document.querySelector('.contact-form') as HTMLFormElement;
  const statusEl = document.querySelector('.form-status') as HTMLElement;
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const submitBtn = form.querySelector('.submit-btn') as HTMLButtonElement;
    
    // Deshabilitar bot√≥n
    submitBtn.disabled = true;
    submitBtn.textContent = 'Enviando...';
    statusEl.textContent = '';
    
    try {
      const response = await fetch(form.action, {
        method: 'POST',
        body: formData,
        headers: {
          'Accept': 'application/json'
        }
      });
      
      if (response.ok) {
        statusEl.textContent = '‚úì ¬°Mensaje enviado con √©xito!';
        statusEl.className = 'form-status success';
        form.reset();
      } else {
        throw new Error('Error al enviar');
      }
    } catch (error) {
      statusEl.textContent = '‚úó Error al enviar. Intenta de nuevo.';
      statusEl.className = 'form-status error';
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = 'Enviar Mensaje';
    }
  });
</script>
